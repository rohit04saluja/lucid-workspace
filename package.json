{
  "name": "workspaces",
  "displayName": "Workspaces",
  "description": "Extension to manage large workspaces",
  "version": "0.0.1",
  "homepage": "https://github.com/rohit04saluja/workspaces",
  "repository": {
      "type": "git",
      "url": "https://github.com/rohit04saluja/workspaces"
  },
  "bugs": {
      "url": "https://github.com/rohit04saluja/workspaces/issues"
  },
  "author": "rohit04saluja",
  "publisher": "rohit04saluja",
  "icon": "_static/icon.png",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "workspaces.enable",
        "enablement": "workspaces:state == activate || workspaces:state == disable",
        "title": "Enable Workspaces"
      },
      {
        "command": "workspaces.disable",
        "enablement": "workspaces:state == enable",
        "title": "Disable Workspaces"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "workspaces",
          "title": "Workspaces",
          "icon": "_static/icon.svg"
        }
      ]
    },
    "views": {
      "workspaces": [
        {
          "id": "all-folders",
          "name": "All Folders"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "all-folders",
        "contents": "You need to enable Workspaces to view folders.\n[Enable](command:workspaces.enable)",
        "enablement": "workspaces:state == activate"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  }
}
