{
  "name": "lucid-workspace",
  "displayName": "Lucid Workspace",
  "description": "An extension to manage large lucid-workspace",
  "version": "0.0.1",
  "homepage": "https://github.com/rohit04saluja/lucid-workspace",
  "repository": {
    "type": "git",
    "url": "https://github.com/rohit04saluja/lucid-workspace"
  },
  "bugs": {
    "url": "https://github.com/rohit04saluja/lucid-workspace/issues"
  },
  "author": "rohit04saluja",
  "publisher": "rohit04saluja",
  "icon": "_static/icon.png",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
      "rohit saluja",
      "rohit",
      "workspace",
      "organizer",
      "dejunk",
      "whitelist",
      "declutter",
      "simplify",
      "manage",
      "management"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lucid-workspace.enable",
        "enablement": "lucid-workspace:state == activate || lucid-workspace:state == disable",
        "title": "Enable Lucid Workspace"
      },
      {
        "command": "lucid-workspace.disable",
        "enablement": "lucid-workspace:state == enable",
        "title": "Disable Lucid Workspace"
      },
      {
        "command": "lucid-workspace.add-to-active",
        "enablement": "lucid-workspace:state == enable",
        "title": "Add to active view"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lucid-workspace",
          "title": "Lucid Workspace",
          "icon": "_static/icon.svg"
        }
      ]
    },
    "views": {
      "lucid-workspace": [
        {
          "id": "fs",
          "name": "All Folders"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "fs",
        "contents": "You need to enable Lucid Workspace to view folders.\n[Enable](command:lucid-workspace.enable)",
        "enablement": "lucid-workspace:state == activate"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "lucid-workspace.add-to-active",
          "when": "view == fs"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/async-lock": "^1.1.2",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "async-lock": "^1.2.8",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  }
}
